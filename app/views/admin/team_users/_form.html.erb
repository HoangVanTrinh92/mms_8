<h3><%= t "user.all_user" %></h3>
<%= form_for [:admin, @team] do |f| %>
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <table class="table">
        <%= f.collection_check_boxes :user_ids,
          @this_team_users, :id, :email do |b| %>
            <tr>
              <%= b.label do %>
                <th><%= b.text %></th>
                <th class="selection_checkbox"><%= b.check_box %></th>
              <% end %>
            </tr>
          <% end %>
        <%= f.collection_check_boxes :user_ids,
          User.not_in_team, :id, :email do |b| %>
            <tr>
              <%= b.label do %>
                <th><%= b.text %></th>
                <th class="selection_checkbox"><%= b.check_box %></th>
              <% end %>
            </tr>
          <% end %>
      </table>
      <%= f.submit t("team.add_member"), class: "btn btn-primary" %>
    </div>
  </div>
<% end %>
