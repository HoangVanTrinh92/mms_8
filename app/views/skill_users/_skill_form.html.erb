<%= form_for @user do |f| %>
  <div class="row">
    <table class="table">
      <%= f.collection_check_boxes :skill_ids, Skill.all, :id, :name do |b| %>
        <tr>
          <%= b.label do %>
            <th><%= b.text %></th>
            <th class="selection_checkbox"><%= b.check_box %></th>
          <% end %>
        </tr>
      <% end %>
    </table>
  </div>
  <%= f.submit t("skill.add"), class: "btn btn-primary" %>
<% end %>
